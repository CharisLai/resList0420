<div clas="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">Login</h1>
            {{> message}}
            <form action="/users/login" method="POST">
                <div class="mb-3">
                    <label for="email"><i class="fa-solid fa-envelope"></i>&nbsp;&nbsp;Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
                </div>
                <div class="mb-3">
                    <label for="password" class="mb-2"><i class="fa-solid fa-lock"></i>&nbsp;&nbsp;Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password">
                </div>
                <div class="mt-3 d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Login&nbsp;&nbsp;<i
                            class="fa-sharp fa-solid fa-right-to-bracket fa-beat fa-lg"></i></button>
                    <a href="/auth/facebook" class="btn btn-info btn-block">Facebook &nbsp;&nbsp;<i
                            class="fa-sharp fa-solid fa-right-to-bracket fa-beat fa-lg"></i></a>
                </div>
            </form>
            <p class="lead mt-4">
                No Account? <a href="/users/register">Register</a>
            </p>
        </div>
    </div>
</div>