<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <div class="row">
        <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
            width="30" height="30" class="d-inline-block align-top" alt="Restaurant List">
          Restaurant List
        </a>
      </div>
    </div>
    <div class="row" style="margin-right:10px">
      <a href="/restaurant/new" class="justify-content-end btn btn-outline-primary ">Create</a>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar mt-4">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="row ">
        <div class="col-md-10 col-12 mx-auto">
          <form action="/search">
            <div class="input-group">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
              <input type="text" name="keyword" class="form-control" placeholder="Restaurant Name or category"
                aria-label="Restaurant Name..." value="" aria-describedby="search-button">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 ">
  <div class="row mt-5">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns row row-cols-sm-3">
        {{#each data}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-2">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>