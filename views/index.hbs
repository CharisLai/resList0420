<!-- search bar -->
<div class="container search-bar ">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-8">
          <form action="/search">
            <div class="input-group">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
              <input type="text" name="keyword" class="form-control" placeholder="Restaurant Name or Category..."
                aria-label="Restaurant Name or Category..." value="{{keyword}}" aria-describedby="search-button">
            </div>
          </form>
        </div>
        <!-- sort -->
        <div class="col-xs-6 col-md-3">
          <form action="./sortby" method="GET" id="sortby">
            <select onchange="this.form.submit()" class="form-select" name="sort" form="sortby">
              <option selected>Select sort...</option>
              <option value="name">A -> Z </option>
              <option value="name-deasc">Z -> A </option>
              <option value="category">Category</option>
              <option value="location">Location</option>
            </select>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Create button -->
<div class="container">
  <div class="row justify-content-end" style="margin-right:10px">
    <a href="/restaurant/new" class="col-xs-6 col-sm-1 btn btn-outline-primary">Create</a>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-20 col-15 mx-auto">
      <div class="card-columns row row-cols-3">
        {{#each data}}
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2 p-1"></i> {{this.category}}
            </div>
            <span class="badge rounded-pill bg-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurant/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
            <a href="/restaurant/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
            <form action="/restaurant/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
</div>